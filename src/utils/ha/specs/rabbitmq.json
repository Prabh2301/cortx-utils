{
    "rabbitmq": {
        "RabbitMQ": {
            "group": "common",
            "provider": {
                "name": "systemd:rabbitmq-server",
                "service": "rabbitmq-server",
                "interval": "10s",
                "timeouts": [ "10s", "10s", "10s" ]
            },
            "dependencies": {
                "predecessors" : [],
                "colocation" : [],
                "relation" : []
            },
            "ha": {
                "mode": "active_active",
                "clones" : {
                    "active": [ 1, 2]
                },
                "location": {
                    "${ha.nodes.0}": "INFINITY",
                    "${ha.nodes.1}": "INFINITY"
                }
            }
        }
    }
}
