{
    "sspl": {
        "Sspl": {
            "group": "management",
            "provider": {
                "name": "systemd:sspl",
                "service": "sspl",
                "interval": "10s",
                "timeouts": [ "10s", "10s", "10s" ]
            },
            "dependencies": {
                "predecessors" : ["Consul", "RabbitMQ"],
                "colocation" : ["Consul"],
                "relation" : []
            },
            "ha": {
                "mode": "master_slave",
                "clones" : {
                    "active": [ 1, 2 ],
                    "master": [ 1, 1 ]
                },
                "location": {
                    "${ha.nodes.0}": "INFINITY",
                    "${ha.nodes.1}": "INFINITY"
                }
            }
        }
    }
}

